<p id="notice"><%= notice %></p>

<h1>記事一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= Article.human_attribute_name(:title) %></th>
      <th scope="col"><%= Article.human_attribute_name(:content) %></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '詳細', article ,class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles, theme: 'twitter-bootstrap-4' %>
