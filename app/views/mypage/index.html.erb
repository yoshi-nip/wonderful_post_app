<p id="notice"><%= notice %></p>

<h1>マイページ</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= Article.human_attribute_name(:title) %></th>
      <th scope="col"><%= Article.human_attribute_name(:content) %></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= article.title %>
          <% article.tags.each do |tag| %>
            <span class="badge rounded-pill bg-primary"><%= tag.name%></span>
          <% end %>
        </td>
        <td><%= article.content %></td>
        <td><%= link_to '詳細', article ,class: "btn btn-success" %></td>
        <td><%= link_to '編集', edit_article_path(article) ,class: "btn btn-warning" %></td>
        <td><%= link_to '削除', article ,class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles, theme: 'twitter-bootstrap-4' %>
